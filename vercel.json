{
  "rewrites": [
    // 1. API 요청을 서버리스 함수로 보냅니다.
    {
      "source": "/api/(.*)",
      "destination": "/api/index.js"
    },

    // 2. citizen_report.html 경로를 해당 파일로 명시적으로 연결합니다. (404 방지 핵심)
    {
      "source": "/citizen_report.html",
      "destination": "/citizen_report.html"
    },

    // 3. 메인 경로 요청을 index.html로 보냅니다.
    {
      "source": "/",
      "destination": "/index.html"
    }
  ]
}
